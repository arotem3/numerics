CXX = g++
CXXFLAGS = -g -Wall
LIBS = -larmadillo
DEPS = numerics.hpp
TARGET = interp_ex

all: interp_ex

interp_ex: interp_ex.o cinterp.o interp.o sincInterp.o wait.o
	$(CXX) $(CXXFLAGS) -o $(TARGET) interp_ex.o cinterp.o interp.o sincInterp.o wait.o $(LIBS)

%.o: %.cpp $(DEPS)

interp_ex.o: examples/interp_ex.cpp examples/gnuplot_i.hpp
	$(CXX) -g -c examples/interp_ex.cpp
wait.o: examples/wait.cpp
	$(CXX) -g -c examples/wait.cpp

clean:
	rm *.o